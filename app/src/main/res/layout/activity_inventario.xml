<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

        <!-- Fondo animado de partículas -->
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/particleBackgroundInventario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_fileName="background_particles.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:scaleType="centerCrop"
                android:alpha="0.2"/>

        <!-- Header principal reducido con mensaje de bienvenida -->
        <androidx.cardview.widget.CardView
                android:id="@+id/card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#CCFFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo de escaneo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#3B3939"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Barra de progreso visual -->
        <ProgressBar
                android:id="@+id/progressBarInventario"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:progress="30"
                android:max="100"
                android:progressTint="#7D0606"
                app:layout_constraintTop_toBottomOf="@id/card_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón flotante de ayuda -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAyuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_help"
                android:contentDescription="Ayuda"
                app:backgroundTint="#7D0606"
                app:tint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="24dp"/>

        <!-- ScrollView para el contenido principal -->
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/particleBackgroundInventario"
                android:layout_marginTop="32dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Acciones principales -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="⚡ Acciones Principales"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnExportar"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Exportar"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_marginEnd="4dp"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnEnviarCorreo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Enviar Correo"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAbrirResumen"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Abrir Resumen"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_marginEnd="4dp"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnCargar"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Cargar"
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Escáner y Captura (con botón destacado) -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="📱 Escáner y Captura"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <Button
                                android:id="@+id/btnEscanearGrande"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="Escanear Rápido"
                                android:backgroundTint="#7D0606"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:layout_marginBottom="12dp"
                                android:elevation="4dp"/>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                                android:id="@+id/toggleGroupScanModes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnScanManual"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Scan Manual"
                                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnScanPallets"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Scan Pallets"
                                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnScanRumba"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Scan Rumba"
                                    style="@style/Widget.Material3.Button.OutlinedButton"/>
                        </com.google.android.material.button.MaterialButtonToggleGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Gestión de Datos -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="💾 Gestión de Datos"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnRestos"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Restos"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_marginEnd="4dp"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnGuardar"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Guardar"
                                    style="@style/Widget.Material3.Button"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"/>

                            <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnSiguiente"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Siguiente"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <!-- Botón de Ajustar Inventario -->
                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAjustarInventario"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="⚙️ Ajustar Inventario (Gerencia)"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_marginTop="8dp"
                                android:textColor="#FF6B00"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Datos de Entrada -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="📝 Datos de Entrada"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                    android:id="@+id/etSkuManual"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="🏷️ SKU Manual"
                                    android:textColor="#FFFFFF"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                    android:id="@+id/etUbicacion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="📍 Ubicación"
                                    android:textColor="#FFFFFF"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="4dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etTotalPallets"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📦 Total Pallets"
                                        android:inputType="number"
                                        android:textColor="#FFFFFF"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="4dp"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etRestos"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📊 Restos"
                                        android:inputType="number"
                                        android:textColor="#FFFFFF"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Datos Escaneados -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        android:visibility="visible">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="📊 Datos Escaneados"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etSKU"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="🏷️ SKU"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etDP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📦 DP"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etCxPal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📦 CxPal"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etFPC"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📅 FPC"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etCon"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="🔗 Con"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etCentro"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="🏢 Centro"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etLINEA"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📋 LINEA"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etOP"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="⚙️ OP"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etFProd"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📅 FProd"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etDiasV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="📆 DiasV"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etLote"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="🏷️ Lote"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                                <EditText
                                        android:id="@+id/etTipoMovimiento"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="🔄 Tipo Movimiento"
                                        android:enabled="false"
                                        android:textColor="#222222"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Resumen -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="📈 Resumen"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="12dp"/>

                        <TextView
                                android:id="@+id/totalCajasTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="📦 Total Cajas: 0"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="#388E3C"
                                android:gravity="center"
                                android:background="#F5F5F5"
                                android:padding="12dp"
                                android:layout_marginBottom="16dp"/>

                        <TableLayout
                                android:id="@+id/tableDatosQR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="*"
                                android:layout_marginBottom="16dp"
                                android:visibility="gone">
                            <!-- Table rows will be added dynamically -->
                        </TableLayout>

                        <Button
                                android:id="@+id/btnCompararEnviar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Comparar y Enviar"
                                android:drawableStart="@drawable/ic_compare_send"
                                android:drawablePadding="8dp"
                                android:backgroundTint="#4CAF50"
                                android:textColor="#FFFFFF"
                                android:padding="16dp"
                                android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
