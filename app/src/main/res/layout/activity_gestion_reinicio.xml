<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gestion.GestionReinicioActivity">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Contenido scrollable -->
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Estado del Sistema -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado del Sistema"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                <TextView
                        android:id="@+id/tv_estado_sistema"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sistema operativo"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:id="@+id/tv_estado_escaneado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Escaneado: Activo"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:id="@+id/tv_estado_comparacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comparaci贸n: Activa"
                        android:textSize="16sp"
                        android:layout_marginBottom="24dp"/>

                <!-- Opciones de Reinicio -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opciones de Reinicio"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                <!-- Card Reiniciar Comparaci贸n -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/card_reiniciar_comparacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Reiniciar Comparaci贸n"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reinicia solo el proceso de comparaci贸n de datos"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card Reiniciar Escaneado -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/card_reiniciar_escaneado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Reiniciar Escaneado"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reinicia el proceso de escaneado de materiales"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card Reiniciar Completo -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/card_reiniciar_completo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Reinicio Completo"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reinicia completamente todos los procesos del sistema"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Historial de Reinicios -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Historial de Reinicios"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                <TextView
                        android:id="@+id/tv_historial_reinicios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay reinicios recientes"
                        android:textSize="16sp"
                        android:minHeight="100dp"
                        android:background="@android:color/white"
                        android:padding="12dp"
                        android:gravity="top"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
