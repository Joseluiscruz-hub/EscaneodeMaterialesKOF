<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloRestos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Captura de Restos (Solo Cajas)"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSKU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SKU de la caja"
        android:inputType="text" />

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:inputType="number" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEscanearCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escanear Caja"
        tools:ignore="UsingOnClick" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGuardarCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Caja"
        tools:ignore="UsingOnClick" />

    <TextView
        android:id="@+id/tvAcumuladoRestos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Acumulado: 0 cajas"
        android:textSize="16sp" />

</LinearLayout>

