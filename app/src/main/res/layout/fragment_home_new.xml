<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_home_new_scene">

    <!-- Fondo animado de partículas -->

    <!-- Logo animado -->

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/particleBackground"
            android:layout_width="421dp"
            android:layout_height="883dp"
            app:lottie_fileName="background_particles.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            tools:srcCompat="@drawable/ic_control_inventario_femsa"
            tools:layout_editor_absoluteY="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/logoIntro"
            android:layout_width="284dp"
            android:layout_height="191dp"
            app:lottie_fileName="home_logo_intro.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"/>

    <!-- Frase motivacional -->

    <!-- Botones principales -->
    <TextView
            android:id="@+id/txtFrase"
            android:layout_width="428dp"
            android:layout_height="84dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Todo lo que se mide, mejora."
            app:layout_constraintTop_toTopOf="@+id/logoIntro"
            android:layout_marginTop="208dp"
            app:layout_constraintHorizontal_bias="0.506"/>

    <Button
            android:id="@+id/btnCapturar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/captura"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/txtFrase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btnDashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnCapturar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btnComparacionTiempoReal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comparación Tiempo Real"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnDashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/btnConfiguracion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/configuracion"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnComparacionTiempoReal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de opciones adicionales -->
    <Button
            android:id="@+id/btnMasOpciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mas_opciones"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnConfiguracion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.helper.widget.Layer
            android:layout_width="370dp"
            android:layout_height="850dp"
            android:id="@+id/layer"
            tools:layout_editor_absoluteY="5dp"/>

</androidx.constraintlayout.motion.widget.MotionLayout>