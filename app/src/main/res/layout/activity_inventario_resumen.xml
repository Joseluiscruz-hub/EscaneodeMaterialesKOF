<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".NewInventarioResumenActivity">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:title="ðŸ“Š Resumen de Inventario"
            app:titleTextColor="#7D0606"
            app:navigationIcon="@drawable/ic_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ScrollView para todo el contenido -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Selector de Centro -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ¢ Seleccionar SKU"
                                android:textColor="#7D0606"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"/>
                        <Spinner
                            android:id="@+id/spinnerCentro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#263238"
                            android:padding="12dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- EstadÃ­sticas Principales -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ EstadÃ­sticas Principales"
                            android:textColor="#7D0606"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"/>

                        <!-- Grid de mÃ©tricas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Total Items -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#F5F5F5"
                                android:padding="12dp"
                                android:layout_marginEnd="4dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalItems"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#4CAF50"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Items"
                                    android:textColor="#B0BEC5"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Total Pallets -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#F5F5F5"
                                android:padding="12dp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalPallets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#2196F3"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pallets"
                                    android:textColor="#B0BEC5"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <!-- Completitud -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:background="#F5F5F5"
                                android:padding="12dp"
                                android:layout_marginStart="4dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvPorcentajeCompletitud"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="#FF9800"
                                    android:textSize="24sp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completitud"
                                    android:textColor="#B0BEC5"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- InformaciÃ³n adicional -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#F5F5F5"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvUltimaActualizacion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ•’ Ãšltima actualizaciÃ³n: --"
                                android:textColor="#B0BEC5"
                                android:textSize="14sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvDiscrepanciasCriticas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="âš ï¸ Discrepancias crÃ­ticas: 0"
                                android:textColor="#F44336"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- GrÃ¡ficos -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="284dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                    <!-- GrÃ¡fico de distribuciÃ³n general -->
                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="#263238"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="8dp">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“Š DistribuciÃ³n"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="8dp"/>

                            <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChart"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- GrÃ¡fico por tipo de tarima -->
                    <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#263238"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="8dp">

                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ—ï¸ Tipo Tarima"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_marginBottom="8dp"/>

                            <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChartTipoTarima"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Alertas -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#37474F"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸš¨ Alertas del Sistema"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <LinearLayout
                            android:id="@+id/layoutAlertas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="âœ… No hay alertas crÃ­ticas"
                                android:textColor="#4CAF50"
                                android:textSize="14sp"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Lista de items recientes -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Items Recientes"
                            android:textColor="#7D0606"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"/>

                        <ListView
                            android:id="@+id/lvRecentItems"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@android:color/transparent"
                            android:divider="#37474F"
                            android:dividerHeight="1dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Botones de acciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Primera fila de botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btnRefresh"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="ðŸ”„ Actualizar"
                            android:backgroundTint="#4CAF50"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnViewDetails"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="ðŸ“‹ Ver Detalles"
                            android:backgroundTint="#2196F3"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Segunda fila de botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btnExportSummary"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="ðŸ“¤ Exportar"
                            android:backgroundTint="#607D8B"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnComparacionRapida"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="âš¡ ComparaciÃ³n"
                            android:backgroundTint="#9C27B0"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Tercera fila de botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btnImportInventory"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="ðŸ“¥ Importar"
                            android:backgroundTint="#FF9800"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnVerTendencias"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="ðŸ“ˆ Tendencias"
                            android:backgroundTint="#00BCD4"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- BotÃ³n de limpiar datos -->
                    <Button
                        android:id="@+id/btnClearData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ—‘ï¸ Limpiar Datos"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barra lateral con opciones -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F5F5F5"
        app:headerLayout="@layout/nav_header_comparacion"
        app:menu="@menu/menu_resumen_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>
